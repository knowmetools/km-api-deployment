{
  "containerDefinitions": [
    {
      "name": "${container_name}",
      "image": "<${image_placeholder}>",
      "cpu": 0,
      "memoryReservation": 128,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DJANGO_ALLOWED_HOSTS",
          "value": "${domain_name}"
        },
        {
          "name": "DJANGO_AWS_REGION",
          "value": "${aws_region}"
        },
        {
          "name": "DJANGO_DB_HOST",
          "value": "${db_host}"
        },
        {
          "name": "DJANGO_DB_NAME",
          "value": "${db_name}"
        },
        {
          "name": "DJANGO_DB_PORT",
          "value": "${db_port}"
        },
        {
          "name": "DJANGO_DB_USER",
          "value": "${db_user}"
        },
        {
          "name": "DJANGO_DEBUG",
          "value": "True"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs-api-web"
        }
      },
      "secrets": [
        {
          "name": "DJANGO_DB_PASSWORD",
          "valueFrom": "${db_password_ssm_arn}"
        }
      ]
    }
  ],
  "family": "api",
  "executionRoleArn": "${execution_role_arn}",
  "networkMode": "awsvpc",
  "compatibilities": [
    "EC2",
    "FARGATE"
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512"
}
